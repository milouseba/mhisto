<div class="exercice-content">
  <div class="instructions">
    <div class="photo-exercice">
      <% if !@exercice.photo.url.nil? %>
        <%= image_tag @exercice.photo.url %>
      <% end  %>
        <div class="photo-exercice-filter">
        <h3><%= @exercice.title %></h3>
        </div>
      </div>
      <div class="exercice-info">
        <p class="beginning-story"><%= @exercice.beginning_story %></p>
        <div class="button-exercice">
          <% if @exercice.answers.where(user: current_user).count >= 1 %>
            <button class= "btn btn-warning">Exercice fait</button>
          <% else %>
            <button class= "btn btn-success">A toi de jouer</button>
          <% end %>
        </div>
        <p class="end-story"><%= @exercice.end_story %></p>
      </div>
    </div>

  <div class="answers">
    <% unless @exercice.answers.where(user: current_user).count >= 1 %>
      <div class="user-answer">
        <%= simple_form_for [@exercice, @answer] do |a| %>
          <%= a.input :content, label: 'Votre réponse' %>
          <%= a.submit 'Répondre' %>
        <% end %>
      </div>
    <% end %>

    <div class="other-answers">
      <ul>
        <% @exercice.answers.each do |answer| %>
          <div class="answer">
            <div class="answer-content">
              <li><%= answer.content %></li>
            </div>
            <div class="answer-infos">
              <div class="avatar-username">
                <p><%= answer.user.username %></p>
              </div>
              <div class="likes-comments">
                <% if answer.votes_for.size == 0 %>
                  <div class="likes">
                    <%= link_to answers_like_path(answer) do %>
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= answer.votes_for.size %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="liked">
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= answer.votes_for.size %>
                  </div>
                <% end %>
                <div class="comments">
                  <i class="fa fa-comments" aria-hidden="true"></i>
                  <%= answer.comments.count %>
                </div>
              </div>
            </div>
            <div id="show-comments">
              Show comments
            </div>
            <div id="hide-comments">
              Hide comments
            </div>
            <div class="answer-comments">
            <ul>
              <% answer.comments.each do |comment| %>
                <div class="comment-content">
                  <li><%= comment.content %></li>
                  <li>par <%= comment.user.username %></li>
                </div>
              <% end %>
            </ul>
          </div>
          <div class="new-comment">
            <%= simple_form_for [answer, @comment] do |c| %>
              <%= c.input :content, label: 'Votre commentaire'  %>
              <%= c.submit 'Commenter' %>
            <% end %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>



