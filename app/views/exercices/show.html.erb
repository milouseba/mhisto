<div class="exercice-content">

  <div class="instructions">
    <div class="photo-exercice">
      <% if !@exercice.photo.url.nil? %>
        <%= image_tag @exercice.photo.url %>
      <% end  %>
        <div class="photo-exercice-filter">
        <h3><%= @exercice.title %></h3>
      </div>
    </div>
    <div class="exercice-info">
      <p class="beginning-story"><%= @exercice.beginning_story %></p>
      <div class="button-exercice">
        <% if @exercice.answers.where(user: current_user).count >= 1 %>
          <div class= "btn-done-answer">Vous avez déjà réalisé l'exercice</div>
        <% else %>
          <div class= "btn-try">En attente de votre réponse</div>
        <% end %>
      </div>
      <p class="end-story"><%= @exercice.end_story %></p>
    </div>
  </div>

  <div class="answers">
  <h4>Réaliser le challenge</h4>
    <% if @answer.status == "pending" %>
      <div class="user-answer">
      <div class="word-counter">
        <p>Compteur de mots:&nbsp;</p> <p id="words-count"></p>
      </div>
        <%= simple_form_for [@exercice, @answer] do |a| %>
          <%= a.input :content, label: '', placeholder: 'Écrivez votre réponse' %>
            <%= a.submit 'Sauvegarder le texte' %>
          <%= a.submit 'Publier', name: "publish" %>
        <% end %>
      </div>
    <% end %>

    <div class="other-answers">
        <h4 class="plays-count">
        <% if @exercice.answers.count == 0 %>
        <% elsif @exercice.answers.count == 1 %>
        Réponse ( <%= @exercice.answers.count %> )
        <% else %>
        Réponses ( <%= @exercice.answers.count %> )
        <% end %>
      </h4>
      <ul>
        <% @answers.each do |answer| %>
          <div class="answer">
            <div class="answer-content">
              <li><%= answer.content %></li>
            </div>
            <div class="answer-infos">
              <div class="avatar-username">
                <h6>par&nbsp;</h6>
                <h6 class="avatar-hidden"><%= answer.user.username %></h6>
                <%= image_tag answer.user.photo %>
              </div>
              <div class="likes-comments">
                <% if answer.votes_for.size == 0 %>
                  <div class="likes">
                    <%= link_to answers_like_path(answer) do %>
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= answer.votes_for.size %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="liked">
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= answer.votes_for.size %>
                  </div>
                <% end %>

              </div>
            </div>
            <div class="comments-container">
              <div class="show-comments">
                Show comments (<%= answer.comments.count %>)
              </div>
              <div class="hide-comments">
                Hide comments
              </div>
              <div class="answer-comments">
                <% if answer.comments.count != 0 %>
                  <ul>
                    <% answer.comments.each do |comment| %>
                      <div class="comment-content">
                        <li><%= comment.content %></li>
                        <div class="commentor">
                          <li>par&nbsp;</li>
                          <li class="user-commentor"><%= comment.user.username %></li>
                        </div>
                      </div>
                    <% end %>
                  </ul>
                <% else %>
                  <p>Pas de commentaire pour cette réponse</p>
                <% end %>
              </div>
            </div>
            <div class="new-comment">
              <%= simple_form_for [answer, @comment] do |c| %>
                <%= c.input :content, label: '', placeholder: 'Écrivez un commentaire'  %>
                <%= c.submit 'Commenter' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>




