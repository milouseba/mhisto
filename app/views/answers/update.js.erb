<% if @answer.status == 'published' %>
  // 1. Remove le form
  document.getElementById('answer-form-block').remove();
  // 2. Append / Prepend ton answer => partial
  const new_answer = "<%= j render 'answers/show', answer: @answer %>";
  document.getElementById('answers-index').insertAdjacentHTML('afterbegin', new_answer );



$(".show-collapse").click(function() {
  $(this).hide();
  $(this).parent().find(".hide-collapse").show();
});
$( ".fa-minus" ).click(function() {
  $(".hide-collapse").hide();
  $(this).parents(".answer").find(".show-collapse").show();
});

$('.hide-comments').hide();

$(".show-comments").click(function() {
  $(this).parent().find(".answer-comments").show("fast");
  $(this).hide();
  $(this).parent().find(".hide-comments").show();
});


$( ".hide-comments" ).click(function() {
  $(this).parent().find(".answer-comments").hide("fast");
  $(this).hide();
  $(this).parent().find(".show-comments").show();
});

$('abbr').hide();

document.getElementById('text-copy').innerText = 'Bravo!';




<% else %>

  document.getElementById('save-auto').innerText = "...";

  setTimeout(function () {
    document.getElementById('save-auto').innerText = "Sauvegard√©";
  }, 1000);

  <% end %>
