<div class="col-md-6 col-md-offset-3">
  <div class="form-group">
  <%= simple_form_for @user do |u| %>
  <%= u.input :username %>
  <%= u.input :first_name, class: 'form-control' %>
  <%= u.input :last_name %>
  <%= u.input :email, class: 'form-control'  %>
  <%= u.input :bio, class: 'form-control' %>
  <%= u.submit class: 'btn btn-primary' %>

  <% end %>
  </div>
</div>
