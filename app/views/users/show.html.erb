 <div class="container">
      <div class="profile text-center">
        <div class="main">
          <div class="main-content">
            <%= image_tag @user.avatar, class: "avatar-big" %>
            <h2>Pseudo: <%= @user.username %></h2>
            <p>Prénom: <%= @user.first_name %></p>
          </div>
        </div>
        <div class="stat">
          <div class="stat-content">
            <h3><%= @user.answers.count %></h3>
            <p>réponses</p>
          </div>
        </div>
        <div class="stat">
          <div class="stat-content">
            <h3><%= @user.exercices.count %></h3>
            <p>exercices</p>
          </div>
        </div>
        <div class="stat">
          <div class="stat-content">
            <h3><%= @user.votes.size %></h3>
            <p>likes</p>
          </div>
        </div>
        <div class="bio">
          <div class="bio-content">
            <h3>More about <%= @user.username %></h3>
            <p class="text-justify">
              <%= @user.bio %>
            </p>
          </div>
        </div>
      </div>
    </div>
